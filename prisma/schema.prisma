generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                     String                @id @unique
  email                  String
  firstName              String
  lastName               String
  profileImage           String
  createdAt              DateTime              @default(now())
  chatSessions           ChatSession[]
  orders                 Order[]
  reviews                Review[]
  tryOnSessions          TryOnSession[]
  newsletterSubscription NewsletterSubscriber?
  auditLogs              AuditLog[]
  returnRequests         ReturnRequest[]
  addresses              Address[]
  wishlist               WishlistItem[]
  role                   UserRole              @default(USER)

  // AI Governance
  aiGenerationsCount Int      @default(0)
  lastGenerationDate DateTime @default(now())
}

enum UserRole {
  ADMIN
  USER
}

model Attribute {
  id        String   @id @default(uuid())
  name      String   @unique
  values    String[]
  createdAt DateTime @default(now())
}

model WishlistItem {
  id                String   @id @default(uuid())
  userId            String
  productId         String
  addedPrice        Int      @default(0)
  lastNotifiedPrice Int?
  createdAt         DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@index([productId])
}

model Product {
  id                 String        @id @default(uuid())
  name               String
  description        String
  status             ProductStatus
  price              Int
  images             String[]
  categoryId         String
  isFeatured         Boolean       @default(false)
  createdAt          DateTime      @default(now())
  color              String?       @default("")
  style              String?       @default("")
  height             String?       @default("")
  pattern            String?       @default("")
  tags               String[]      @default([])
  features           String[]      @default([])
  sizes              String[]      @default([])
  modelUrl           String?
  usdzUrl            String? // For iOS AR Quick Look
  imageDescription   String?
  discountPercentage Int           @default(0)
  averageRating      Float         @default(0)
  reviewCount        Int           @default(0)
  meshyProgress      Int?          @default(0)
  meshyStatus        String?       @default("PENDING")
  meshyTaskId        String?

  // Inventory Fields
  stockQuantity     Int   @default(0)
  costPrice         Int   @default(0) // In cents
  reservedStock     Int   @default(0)
  weight            Float @default(1.0)
  lowStockThreshold Int   @default(5)

  mainCategory          MainCategory           @default(MEN)
  category              Category               @relation(fields: [categoryId], references: [id])
  reviews               Review[]
  tryOnSessions         TryOnSession[]
  orderItems            OrderItem[]
  wishlistItems         WishlistItem[]
  campaignItems         CampaignProduct[]
  inventoryTransactions InventoryTransaction[]

  // Performance indexes for common queries
  @@index([status])
  @@index([mainCategory])
  @@index([createdAt])
  @@index([reviewCount])
  @@index([isFeatured])
  @@index([categoryId])
}

model InventoryTransaction {
  id          String                   @id @default(uuid())
  productId   String
  type        InventoryTransactionType
  quantity    Int
  unitCost    Int                      @default(0) // Cost at time of transaction
  unitPrice   Int                      @default(0) // Selling price at time of transaction (if applicable)
  referenceId String? // Order ID, Return ID, etc.
  reason      String?
  createdAt   DateTime                 @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([createdAt])
}

enum InventoryTransactionType {
  SALE
  RESERVE
  RELEASE
  RESTOCK
  RETURN
  MANUAL_ADJUSTMENT
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  slug        String    @unique
  description String?
  image       String?
  createdAt   DateTime  @default(now())
  products    Product[]
}

model Banner {
  id          String    @id @default(uuid())
  title       String
  imageString String
  link        String?   @default("/")
  campaignId  String?
  campaign    Campaign? @relation(fields: [campaignId], references: [id])
  createdAt   DateTime  @default(now())

  @@index([campaignId])
}

model Campaign {
  id              String            @id @default(uuid())
  title           String
  slug            String            @unique
  description     String?
  status          CampaignStatus    @default(DRAFT)
  startDate       DateTime?
  endDate         DateTime?
  heroImage       String?
  mobileHeroImage String?
  theme           Json? // { backgroundColor, accentColor, fontColor }
  metadata        Json? // { seoTitle, seoDescription, ogImage }
  products        CampaignProduct[]
  banners         Banner[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([status])
  @@index([slug])
}

model CampaignProduct {
  campaignId    String
  productId     String
  order         Int      @default(0)
  badge         String?
  highlightText String?
  createdAt     DateTime @default(now())

  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  product  Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@id([campaignId, productId])
  @@index([campaignId])
  @@index([productId])
}

enum CampaignStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

model Order {
  id                String            @id @default(uuid())
  status            OrderStatus       @default(CREATED)
  paymentStatus     PaymentStatus     @default(PENDING)
  fulfillmentStatus FulfillmentStatus @default(UNFULFILLED)

  amount         Int
  userId         String?
  createdAt      DateTime        @default(now())
  discountId     String?
  discount       Discount?       @relation(fields: [discountId], references: [id])
  User           User?           @relation(fields: [userId], references: [id])
  payment        Payment?
  shipments      Shipment[]
  returnRequests ReturnRequest[]

  // Shipping address snapshot
  shippingName         String?
  shippingPhone        String?
  shippingStreet1      String?
  shippingStreet2      String?
  shippingCity         String?
  shippingState        String?
  shippingPostalCode   String?
  shippingCountry      String? @default("US")
  shippingRateId       String?
  shippingCost         Int     @default(0)
  shippingServiceLevel String?

  orderItems OrderItem[]

  @@index([userId])
  @@index([createdAt])
  @@index([status])
  @@index([discountId])
}

enum FulfillmentStatus {
  UNFULFILLED
  PARTIALLY_FULFILLED
  FULFILLED
  RETURNED
  PARTIALLY_RETURNED
}

model Payment {
  id            String        @id @default(uuid())
  amount        Int
  currency      String        @default("USD")
  status        PaymentStatus @default(PENDING)
  provider      String
  transactionId String?
  orderId       String        @unique
  createdAt     DateTime      @default(now())
  order         Order         @relation(fields: [orderId], references: [id])
}

model Shipment {
  id             String         @id @default(uuid())
  orderId        String
  trackingNumber String?
  carrier        String?
  trackingUrl    String?
  labelUrl       String?
  status         ShipmentStatus @default(PENDING)
  eta            DateTime?
  shippoId       String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  order Order          @relation(fields: [orderId], references: [id])
  items ShipmentItem[]

  @@index([orderId])
}

model ShipmentItem {
  id          String @id @default(uuid())
  shipmentId  String
  orderItemId String
  quantity    Int

  shipment  Shipment  @relation(fields: [shipmentId], references: [id], onDelete: Cascade)
  orderItem OrderItem @relation(fields: [orderItemId], references: [id], onDelete: Cascade)

  @@index([shipmentId])
  @@index([orderItemId])
}

model Discount {
  id         String    @id @default(uuid())
  code       String    @unique
  percentage Int
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
  expiresAt  DateTime?
  orders     Order[]
}

model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String
  isHidden  Boolean  @default(false)
  userId    String
  productId String
  createdAt DateTime @default(now())
  Product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  User      User     @relation(fields: [userId], references: [id])

  @@index([productId])
  @@index([userId])
}

model TryOnSession {
  id          String   @id @default(uuid())
  userId      String
  userImage   String
  productId   String
  resultImage String?
  status      String   @default("PROCESSING")
  createdAt   DateTime @default(now())
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([productId])
}

model ChatSession {
  id        String   @id @default(uuid())
  userId    String?
  messages  Json
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Contact {
  id        String        @id @default(uuid())
  name      String
  email     String
  subject   String
  message   String
  status    ContactStatus @default(PENDING)
  isRead    Boolean       @default(false)
  createdAt DateTime      @default(now())
}

enum ContactStatus {
  PENDING
  COMPLETED
  IGNORED
}

model playing_with_neon {
  id    Int    @id @default(autoincrement())
  name  String
  value Float? @db.Real
}

model DailyStat {
  id            String   @id @default(uuid())
  date          DateTime @unique @default(now())
  totalRevenue  Int      @default(0)
  totalOrders   Int      @default(0)
  totalVisitors Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum OrderStatus {
  CREATED
  PAYMENT_PENDING
  PAID
  ALLOCATED
  PARTIALLY_SHIPPED
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
  FAILED
}

enum ProductStatus {
  draft
  published
  archived
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum ShipmentStatus {
  PENDING
  SHIPPED
  IN_TRANSIT
  OUT_FOR_DELIVERY
  DELIVERED
  EXCEPTION
  RETURNED
}

enum MainCategory {
  MEN
  WOMEN
  KIDS
}

model NewsletterSubscriber {
  id        String   @id @default(uuid())
  email     String   @unique
  userId    String?  @unique
  status    String   @default("subscribed") // subscribed, unsubscribed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
}

model AuditLog {
  id         String   @id @default(uuid())
  userId     String?
  action     String
  targetType String
  targetId   String?
  metadata   Json?
  createdAt  DateTime @default(now())
  user       User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([action])
  @@index([targetType, targetId])
}

model AiInteractionLog {
  id             String   @id @default(uuid())
  route          String
  input          String
  mode           String?
  ip             String?
  responseTimeMs Int
  success        Boolean
  errorMessage   String?
  createdAt      DateTime @default(now())
}

model ReturnRequest {
  id           String       @id @default(uuid())
  orderId      String
  userId       String
  reason       String
  status       ReturnStatus @default(PENDING)
  refundAmount Int?
  adminNotes   String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  order Order @relation(fields: [orderId], references: [id])
  user  User  @relation(fields: [userId], references: [id])

  @@index([orderId])
  @@index([userId])
}

enum ReturnStatus {
  PENDING
  APPROVED
  REJECTED
  REFUNDED
  COMPLETED
}

model OrderItem {
  id            String         @id @default(uuid())
  orderId       String
  productId     String?
  quantity      Int
  price         Int
  name          String
  size          String?
  image         String?
  createdAt     DateTime       @default(now())
  order         Order          @relation(fields: [orderId], references: [id])
  product       Product?       @relation(fields: [productId], references: [id], onDelete: SetNull)
  shipmentItems ShipmentItem[]

  @@index([orderId])
  @@index([productId])
}

model Address {
  id         String  @id @default(uuid())
  userId     String
  name       String
  street1    String
  street2    String?
  city       String
  state      String
  postalCode String
  country    String  @default("US")
  phone      String?
  isDefault  Boolean @default(false)
  user       User    @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Alert {
  id        String   @id @default(uuid())
  type      String
  severity  String
  message   String
  metadata  Json?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model WebhookEvent {
  id          String   @id @default(uuid())
  provider    String // "stripe", "shippo"
  eventId     String   @unique // The external ID (req.headers["stripe-signature"] or body.id)
  eventType   String // "checkout.session.completed", "track_updated"
  payload     Json
  status      String // "processed", "failed"
  error       String?
  processedAt DateTime @default(now())
  createdAt   DateTime @default(now())
}

model AICache {
  key       String   @id
  content   Json
  expiresAt DateTime
  createdAt DateTime @default(now())
}
